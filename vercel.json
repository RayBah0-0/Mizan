{
  "version": 2,
  "framework": null,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/index.html", "headers": { "Cache-Control": "no-cache, no-store, must-revalidate" } },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
